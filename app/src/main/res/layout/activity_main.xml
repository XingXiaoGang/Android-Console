<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:id="@+id/input_key_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input key here"
                android:minHeight="50dp"
                android:text="key.123" />

            <EditText
                android:id="@+id/input_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input text here"
                android:minHeight="50dp"
                android:text="xiao gang 123 . 小刚" />

            <TextView
                android:id="@+id/text_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444" />

            <Button
                android:id="@+id/start_shell"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="终端" />

            <Button
                android:id="@+id/start_socket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Socket测试" />

            <Button
                android:id="@+id/btn_encryp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="AES加密测试" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>